{
    "manifest_version": 3,
    "name": "Text Speak",
    "description": "Text Speak is a chrome extension that reads text for you. This could be used to read a document aloud to you, or to just have your computer say something.",
    "version": "0.1.0",
    "author": "Greg Babbert",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "/images/linkconnect.png"
        }
    },
    "icons": {
        "128": "/images/linkconnect.png"
    }
}